@using NameGen.Models;
@model NameGeneratorViewModel

@{
    ViewBag.Title = "Namertron";
}

<div class="jumbotron">
    <h1>Namertron</h1>
    <p class="lead">Hmmmm:</p>

    @using (Html.BeginForm())
    {
        <div class="inputText">
            @Html.TextBoxFor(model => model.InputText)
        </div>
            
        <div class="btn btn-lg">
            <button name="girl-button">Namertron girl...</button>
        </div>

        <div class="btn btn-lg">
            <button name="boy-button">Namertron boy...</button>
        </div>
    }
    
    @if (Model.Name != null && Model.Name != "")
    {
        <div class="name">@Model.Name</div>
    }
</div>
